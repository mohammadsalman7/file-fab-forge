<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <staticContent>
      <mimeMap fileExtension=".js" mimeType="text/javascript" />
      <mimeMap fileExtension=".mjs" mimeType="text/javascript" />
      <mimeMap fileExtension=".jsx" mimeType="text/javascript" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".wasm" mimeType="application/wasm" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <mimeMap fileExtension=".xml" mimeType="application/xml" />
      <mimeMap fileExtension=".css" mimeType="text/css" />
    </staticContent>
    
    <rewrite>
      <rules>
        <!-- BLOCK SPA rewrite for all asset requests -->
        <rule name="BlockAssetsRewrite" stopProcessing="true">
          <match url="^assets/(.*)$" />
          <action type="None" />
        </rule>
        
        <rule name="BlockUploadsRewrite" stopProcessing="true">
          <match url="^uploads/(.*)$" />
          <action type="None" />
        </rule>
        
        <rule name="BlockManifestRewrite" stopProcessing="true">
          <match url="^manifest\.json$" />
          <action type="None" />
        </rule>
        
        <rule name="BlockRobotsRewrite" stopProcessing="true">
          <match url="^robots\.txt$" />
          <action type="None" />
        </rule>
        
        <rule name="BlockSitemapRewrite" stopProcessing="true">
          <match url="^sitemap\.xml$" />
          <action type="None" />
        </rule>
        
        <rule name="BlockSWRewrite" stopProcessing="true">
          <match url="^sw\.js$" />
          <action type="None" />
        </rule>
        
        <rule name="BlockAdsRewrite" stopProcessing="true">
          <match url="^ads\.txt$" />
          <action type="None" />
        </rule>
        
        <rule name="BlockFaviconRewrite" stopProcessing="true">
          <match url="^favicon\.ico$" />
          <action type="None" />
        </rule>
        
        <!-- Only apply SPA rewrite for non-asset requests -->
        <rule name="SPA Routes" stopProcessing="true">
          <match url="^(.*)$" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{URL}" pattern="^/(assets|uploads|manifest\.json|robots\.txt|sitemap\.xml|sw\.js|ads\.txt|favicon\.ico)" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>
    
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
